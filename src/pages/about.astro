---
import "../styles/global.css";
import BaseLayout from "./../layouts/baselayout.astro";

const pageTitle = "About Me";

const identity = {
    firstName: "Roberto",
    country: "Mexico",
    occupation: "SharePoint Developer / Frontend Developer",
    hobbies: ["videogames", "read", "anime"],
};

const skills = ["HTML", "CSS", "JavaScript", "Astro"];
---

<BaseLayout pageTitle={ pageTitle }>
    <p>Page to show things about me</p>

    <p>Hello my name is { identity.firstName }</p>
    <p>I live in { identity.country } and I work as { identity.occupation }</p>

    { 
        identity.hobbies.length >= 2 && 
        <li>Two of my hobbies are: { identity.hobbies[0] } and { identity.hobbies[1] }</li>
    }

    <p>My skills are:</p>
    <ul>
        {skills.map((skill) => <li>{skill}</li>)}
    </ul>
</BaseLayout>